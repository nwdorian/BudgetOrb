@model CategoryIndex

<div class="d-flex justify-content-center my-4">
    <button type="button" class="btn btn-primary" onclick="loadModal('Categories', 'Create')">New category</button>
</div>

<div class="row g-4">
    @foreach (var category in Model.Categories)
    {
        <div class="col-auto">
            <div class="card h-100 border-primary text-center" style="width: 18rem">
                <h4 class="card-header">@Html.DisplayFor(model => category.Name)</h4>
                <div class="card-body d-flex align-items-center">
                    <dl class="row mb-0">
                        <dt class="col-12">
                            @Html.DisplayNameFor(model => category.TotalTransactions)
                        </dt>
                        <dd class="col-12">
                            @Html.DisplayFor(model => category.TotalTransactions)
                        </dd>
                        <dt class="col-12">
                            @Html.DisplayNameFor(model => category.TotalTransactionsAmount)
                        </dt>
                        <dd class="col-12">
                            @Html.DisplayFor(model => category.TotalTransactionsAmount)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer p-0 overflow-hidden">
                    <div class="row g-0">
                        <div class="col-6 border-end border-secondary">
                            <button type="button" class="btn btn-light w-100 rounded-0 border-0 text-decoration-none py-2"
                                    onclick="loadModal('Categories', 'Update','@category.Id')">
                                Update
                            </button>
                        </div>
                        <div class="col-6">
                            <button type="button" class="btn btn-light w-100 rounded-0 border-0 text-decoration-none py-2"
                                    onclick="loadModal('Categories', 'Delete','@category.Id')">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

<div id="modal-placeholder"></div>

@section Scripts {
    <script src="~/js/modalManager.js"></script>
}