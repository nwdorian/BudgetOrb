@model CategoryDelete

<div class="modal fade" id="delete-category-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="Delete" asp-route-id="@Model.Id" id="delete-category-form"
                  onsubmit="submitDelete(this, event)">
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@Model.Name</strong> category?</p>
                    <p class="text-danger">This will delete all transactions in this category!</p>
                    <p class="text-muted small">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>